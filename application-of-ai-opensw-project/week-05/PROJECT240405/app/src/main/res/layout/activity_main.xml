<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="2020039037 성열암"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/numberInput_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_userinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/operand_1_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/operand_2_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/operand_1_editText" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/buttons_gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberInput_relativeLayout"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="2">

        <Button
            android:id="@+id/number0_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7.5dp"
            android:text="0"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number1_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7.5dp"
            android:text="1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number2_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7.5dp"
            android:text="2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number3_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7.5dp"
            android:text="3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number4_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number5_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number6_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number7_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number8_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/number9_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/black" />
    </GridLayout>

    <RelativeLayout
        android:id="@+id/operators_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons_gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/plus_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plus_button"
            android:text="빼기"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/minus_button"
            android:text="곱하기"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/divide_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/multiply_button"
            android:text="나누기"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/result_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operators_relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="계산 결과 : "
        android:textAlignment="textStart"
        android:textColor="@color/red"

        android:textSize="15sp" />
</RelativeLayout>